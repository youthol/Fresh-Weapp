/* pages/form/form.wxss */
.solt {
  height: 50rpx;
}

.form-intro {
  max-height: 240px !important;
}

.filed-replace {
  position: relative;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  padding: 10px 15px;
  font-size: 14px;
  line-height: 24px;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}

.filed-replace::before {
  position: absolute;
  left: 7px;
  font-size: 14px;
  color: #f44;
  content: "*";
}

.filed-replace::after {
  content: " ";
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  top: auto;
  left: 15px;
  right: 0;
  bottom: 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  border-bottom: 1px solid #eee;
}

.filed-replace-title {
  max-width: 90px;
  min-width: 90px;
  -webkit-flex: 1;
  flex: 1;
}

.filed-replace-content {
  overflow: hidden;
  color: #999;
  text-align: right;
  vertical-align: middle;
}

.form-tip {
  padding: 10rpx 20rpx;
  font-size: 12px;
  color: rgb(138, 138, 138);
  text-align: left;
  display: block;
}

.form-sub-btn {
  margin: 0 auto;
  margin-top: 70rpx;
  margin-bottom: 60rpx;
  width: 50% !important;
}

.form-picker-header {
  height: 80rpx;
}

.form-picker-header .cancel {
  float: left;
  padding-left: 30rpx;
}

.form-picker-header .confirm {
  float: right;
  padding-right: 30rpx;
}

.form-picker-header .cancel,
.form-picker-header .confirm {
  line-height: 80rpx;
  color: #1989fa;
}

.form-indicator {
  height: 100rpx;
}

.form-picker {
  width: 100%;
  height: 600rpx;
}

.form-picker-column-item {
  line-height: 100rpx;
  text-align: center;
}

.remark-item {
  padding-left: 20rpx;
}
