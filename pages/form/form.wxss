/* pages/form/form.wxss */

.form-intro {
  max-height: 240px !important;
}

.form-tip {
  padding: 10rpx 20rpx;
  font-size: 12px;
  color: rgb(138, 138, 138);
  text-align: left;
  display: block;
}

.form-sub-btn {
  margin: 0 auto;
  margin-top: 70rpx;
  margin-bottom: 60rpx;
  width: 50% !important;
}

.form-picker-header {
  height: 80rpx;
}

.form-picker-header .cancel {
  float: left;
  padding-left: 30rpx;
}

.form-picker-header .confirm {
  float: right;
  padding-right: 30rpx;
}

.form-picker-header .cancel,
.form-picker-header .confirm {
  line-height: 80rpx;
  color: #1989fa;
}

.form-indicator {
  height: 100rpx;
}

.form-picker {
  width: 100%;
  height: 600rpx;
}

.form-picker-column-item {
  line-height: 100rpx;
  text-align: center;
}