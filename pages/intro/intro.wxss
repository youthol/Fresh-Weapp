/* pages/intro/intro.wxss */

page {
  height: 100%;
}

.intro-container {
  display: flex;
  flex-wrap: wrap;
}

.intro-item-container {
  height: 260rpx;
  width: 50%;
  padding-top: 60rpx;
  opacity: 0;
  transform: translateX(40rpx);
}

.intro-item {
  color: #fff;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  line-height: 260rpx;
  width: 80%;
  height: 100%;
  /* background-image: linear-gradient(to right, #05befe, #5490f7); */
  background-color: #008aff;
  margin: 0 auto;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 50rpx rgb(172, 172, 172);
  transition: width .2s, height .2s;
}

.intro-item-hover {
 width: 76%;
 height: 96%;
 /* background-image: linear-gradient(to right, #05c0febb, #5490f7d2); */
 background-color: #009cff;
}

.intro-btn {
  width: 70%;
  height: 80rpx;
  color: #3478f6;
  margin: 0 auto;
  text-align: center;
  line-height: 80rpx;
  background-color: #f2f2f6;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  opacity: 0;
}

.intro-btn-hover {
  color: #c2d6f6;
}

.intro-popup {
  height: 800rpx;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  padding: 0 !important;
}

.intro-popup-header {
  height: 80rpx;
  width: 100%;
}

.intro-popup-header .close {
  position: absolute;
  top: 40rpx;
  right: 14rpx;
  margin-top: -26rpx;
}

.intro-popup-scroll {
  width: 100%;
  height: 720rpx;
  
}

.intro-content-view {
  overflow: hidden;
  padding: 30rpx 30rpx;
  text-align: justify;
}

.intro-loading-state {
  text-align: center;
  margin-top: 60rpx;
}

.intro-loading-font {
  color: #c9c9c9;
  font-size: 26rpx;
  margin-top: 40rpx;
}

.intro-loading-font .reload {
  color: #05befe;
  text-decoration: underline;
}